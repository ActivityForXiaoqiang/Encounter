<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_position_text_white"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/position_system"
            android:textColor="@color/color_white"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_position_text_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_search" />

            <EditText
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/position_edit_hint_text"
                android:textColor="@color/tag_color_yellow"
                android:textColorHint="@color/color_white"
                android:textSize="17sp" />

        </LinearLayout>

<ecncounter.wilson.com.encounter.EUI.NoScrollListView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"></ecncounter.wilson.com.encounter.EUI.NoScrollListView>
    </LinearLayout>

</RelativeLayout>